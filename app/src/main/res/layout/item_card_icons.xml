<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_ic_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="?attr/colorPrimary">

        <ImageView
            android:id="@+id/ic_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_message1"
            app:tint="@color/black" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_ic_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@id/card_ic_message"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="?attr/colorPrimary">

        <ImageView
            android:id="@+id/ic_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_video_maker"
            android:tint="@color/black" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_ic_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@id/card_ic_video"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="?attr/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_call_24"
            android:tint="@color/black" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_ic_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@id/card_ic_call"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="?attr/colorPrimary">

        <ImageView
            android:id="@+id/ic_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_point" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Message"
        app:layout_constraintEnd_toEndOf="@+id/card_ic_message"
        app:layout_constraintStart_toStartOf="@+id/card_ic_message"
        app:layout_constraintTop_toBottomOf="@+id/card_ic_message" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Video"
        app:layout_constraintEnd_toEndOf="@+id/card_ic_video"
        app:layout_constraintStart_toStartOf="@+id/card_ic_video"
        app:layout_constraintTop_toBottomOf="@+id/card_ic_video" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="More"
        app:layout_constraintEnd_toEndOf="@+id/card_ic_point"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@+id/card_ic_point"
        app:layout_constraintTop_toBottomOf="@+id/card_ic_point" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Call"
        app:layout_constraintEnd_toEndOf="@id/card_ic_call"
        app:layout_constraintStart_toStartOf="@id/card_ic_call"
        app:layout_constraintTop_toBottomOf="@id/card_ic_call"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="66dp" />


</androidx.constraintlayout.widget.ConstraintLayout>