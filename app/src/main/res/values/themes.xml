<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wikipedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/primary_regular</item>
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>

        <item name="windowNoTitle">true</item>

    </style>
    <!-- my theme here. -->
    <style name="MyThemeToolbar" parent="Theme.MaterialComponents">
        <item name="fontFamily">@font/primary_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
   <!-- for button home-->
    <style name="MyThemeProfileToolbar" parent="Theme.MaterialComponents">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black_light</item>
    </style>
    <!--for menuOverflow-->
    <style name="MyThemeProfileMenuToolbar" parent="Theme.MaterialComponents">
        <item name="fontFamily">@font/primary_regular</item>
        <item name="popupMenuBackground">@drawable/shape_menu_profile</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>
<!-- //for size and font title-->
    <style name="ProfileTitle" parent="Theme.MaterialComponents">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/primary_regular</item>
    </style>


</resources>